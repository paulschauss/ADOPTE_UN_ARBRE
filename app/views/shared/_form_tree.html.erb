<%= simple_form_for @tree do |f| %>
  <%= f.input :name %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: 'd-none' },
              wrapper_html: { data: { controller: "geocoder",
                                      geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :price %>
  <%= f.input :quantity_per_year %>
  <%= f.input :fruit, collection: ["Apple",
                                   "Apricot",
                                   "Cherry",
                                   "Chestnut",
                                   "Coconut",
                                   "Fig",
                                   "Grapefruit",
                                   "Hazel",
                                   "Mandarin",
                                   "Mango",
                                   "Mirabellier",
                                   "Mulberry",
                                   "Olivier",
                                   "Orange",
                                   "Pear",
                                   "Plum"] %>
  <%= f.input :short_description %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>
